<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:layout_marginEnd="-24dp"
    android:paddingStart="72dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_card"
        android:layout_width="216dp"
        android:layout_height="284dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:cardBackgroundColor="@color/grey" />

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="162dp"
        android:layout_height="156dp"
        android:layout_marginEnd="-16dp"
        android:elevation="7dp"
        app:layout_constraintBottom_toBottomOf="@id/item_card"
        app:layout_constraintRight_toRightOf="@id/item_card"
        app:layout_constraintTop_toTopOf="@id/item_card" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="12dp"
        android:background="@drawable/heart"
        android:backgroundTint="@color/white"
        android:elevation="6dp"
        app:layout_constraintRight_toRightOf="@id/item_card"
        app:layout_constraintTop_toTopOf="@id/item_card" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="12dp"
        android:background="@drawable/ic_trending_flat"
        android:backgroundTint="@color/white"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="@id/item_card"
        app:layout_constraintRight_toRightOf="@id/item_card" />

    <TextView
        android:id="@+id/tv_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="6dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/item_card"
        app:layout_constraintTop_toTopOf="@id/item_card"
        tools:text="Nike" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:elevation="6dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/item_card"
        app:layout_constraintTop_toBottomOf="@id/tv_brand"
        tools:text="Air-Max" />

    <TextView
        android:id="@+id/tv_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:elevation="6dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/item_card"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        tools:text="160$" />

</androidx.constraintlayout.widget.ConstraintLayout>